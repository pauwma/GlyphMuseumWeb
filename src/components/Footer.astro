---
// Footer component for Glyph Museum website
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-logo">
        <img src="/GlyphMuseumWeb/logo.svg" alt="Glyph Museum Logo" width="32" height="32" />
      </div>

      <p class="footer-copy">
        &copy; {currentYear} Glyph Museum. Made with ü§ç for Nothing the community.
      </p>

      <nav class="footer-links">
        <a href="/GlyphMuseumWeb/privacy" class="footer-link">Privacy</a>
        <span class="separator">‚Ä¢</span>
        <a href="/GlyphMuseumWeb/terms" class="footer-link">Terms</a>
        <span class="separator">‚Ä¢</span>
        <a href="mailto:contact+glyphmuseum@proton.me" class="footer-link">Contact</a>
      </nav>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--surface-dark);
    border-top: 1px solid var(--outline-dark);
    margin-top: auto;
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-lg);
    padding: var(--space-2xl) 0;
    text-align: center;
  }

  .footer-logo {
    opacity: 0.8;
  }

  .footer-logo img {
    filter: brightness(0) invert(1);
    transition: opacity var(--transition-fast);
  }

  .footer-logo:hover {
    opacity: 1;
  }

  .footer-copy {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--nothing-medium-grey);
    line-height: 1.5;
    margin: 0;
  }

  .footer-links {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    font-family: var(--font-mono);
    flex-wrap: wrap;
    justify-content: center;
  }

  .footer-link {
    font-size: 0.875rem;
    color: var(--on-surface-dark);
    text-decoration: none;
    transition: color var(--transition-fast);
    padding: var(--space-xs);
  }

  .footer-link:hover {
    color: var(--nothing-red);
    opacity: 1;
  }

  .separator {
    color: var(--nothing-medium-grey);
    font-size: 0.75rem;
    opacity: 0.6;
  }

  /* Mobile responsive */
  @media (max-width: 480px) {
    .footer-content {
      gap: var(--space-md);
      padding: var(--space-xl) 0;
    }

    .footer-links {
      gap: var(--space-sm);
    }

    .footer-copy {
      font-size: 0.8125rem;
    }

    .footer-link {
      font-size: 0.8125rem;
    }
  }
</style>